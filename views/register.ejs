<html lang="pt-br" data-bs-theme="auto">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Criar uma Conta</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">    

    <link href="/css/sign-in.css" rel="stylesheet">
    <link href="/css/banner.css" rel="stylesheet">
  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <% if(typeof errors != 'undefined') { %>
        <div class="alert alert-danger ">
            <button type="button" class="alert-dismissable close " data-dismiss="alert">&times;</button>
            <strong>Error! </strong>
            <ul>
                <% errors.forEach((error) => { %>
                    <li><%= error.message %></li>
                <% }) %>
            </ul>
        </div>
    <% } %>
    <div class="d-flex align-items-center py-4 bg-body-tertiary">
        <main class="form-register w-100 m-auto">
            <form action="/users/register" method="POST">
                <h1 class="h3 mb-3 fw-normal common-heading">Crie uma conta</h1>

                <div class="form-floating">
                <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                <label for="floatingInput">Nome</label>
                </div>
                <div class="form-floating">
                    <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating">
                <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                <label for="floatingPassword">Senha</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" name="password2" id="password2" placeholder="Password" required>
                    <label for="floatingPassword">Confirme a senha</label>
                </div>
                <div class="form-floating">
                <a href="/users/login">Já é cadastrado? Clique aqui </a>
                </div>
                
                
                <button class="btn btn-primary w-100 py-2" type="submit" value="Register">Criar Conta</button>
            </form>
        </main>
       
    </div>
  </body>
</html>
